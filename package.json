{
  "name": "testfusion-enterprise",
  "version": "1.0.0",
  "description": "Enterprise test automation framework using Playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:run": "playwright test",
    "test:api": "npm run test:run -- --grep @api",
    "test:posts:crud": "npm run test:run -- tests/api/posts-crud-operations.spec.ts",
    "test:users:validation": "npm run test:run -- tests/api/users-data-validation.spec.ts",
    "test:comments:relationships": "npm run test:run -- tests/api/comments-relationship-validation.spec.ts",
    "test:integration": "npm run test:run -- tests/api/cross-entity-integration.spec.ts",
    "test:smoke": "npm run test:run -- --grep @smoke",
    "test:regression": "npm run test:run -- --grep @regression",
    "test:validation": "npm run test:run -- --grep @validation",
    "install:browsers": "playwright install"
  },
  "keywords": [
    "playwright",
    "testing",
    "automation",
    "e2e"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0"
  },
  "dependencies": {
    "dotenv": "^16.5.0"
  }
}
