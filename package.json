{
  "name": "testfusion-enterprise",
  "version": "1.0.0",
  "description": "Enterprise test automation framework using Playwright",
  "main": "index.js",
  "scripts": {
    "// Core Testing": "",
    "test": "dotenv -e .env -- playwright test",
    "test:headed": "dotenv -e .env -- playwright test --headed",
    "test:debug": "dotenv -e .env -- playwright test --debug",
    "test:ui": "dotenv -e .env -- playwright test --ui",
    "test:report": "playwright show-report",
    "// Test Suites": "",
    "test:api": "dotenv -e .env -- playwright test --project=api",
    "test:web": "dotenv -e .env -- playwright test --project=chromium --project=firefox --project=webkit",
    "test:smoke": "dotenv -e .env -- playwright test --grep @smoke",
    "test:regression": "dotenv -e .env -- playwright test --grep @regression",
    "test:critical": "dotenv -e .env -- playwright test --grep @critical",
    "// Individual Test Files": "",
    "test:posts": "dotenv -e .env -- playwright test --project=api tests/api/posts-crud-operations.spec.ts",
    "test:users": "dotenv -e .env -- playwright test --project=api tests/api/users-data-validation.spec.ts",
    "test:comments": "dotenv -e .env -- playwright test --project=api tests/api/comments-relationship-validation.spec.ts",
    "// Execution Modes": "",
    "test:parallel": "dotenv -e .env -- playwright test --workers=4",
    "test:serial": "dotenv -e .env -- playwright test --workers=1",
    "test:web:grid": "cross-env WEB_EXECUTION_MODE=grid SELENIUM_GRID_HUB_URL=http://localhost:4444/wd/hub dotenv -e .env -- playwright test --project=chromium",
    "test:web:grid:docker": "docker-compose -f docker-compose.test.yml up -d selenium-hub selenium-chrome && npm run test:web:grid && docker-compose -f docker-compose.test.yml down",
    "// Grid Management": "",
    "grid:start": "bash scripts/grid.sh start",
    "grid:stop": "bash scripts/grid.sh stop",
    "grid:status": "bash scripts/grid.sh status",
    "grid:test": "bash scripts/grid.sh test",
    "grid:restart": "bash scripts/grid.sh restart",
    "test:web:browserstack": "dotenv -e .env -- playwright test --project=browserstack",
    "// CI/CD": "",
    "test:ci": "dotenv -e .env -- playwright test",
    "test:ci:api": "dotenv -e .env -- playwright test --project=api",
    "test:ci:web": "dotenv -e .env -- playwright test --project=chromium --project=firefox --project=webkit",
    "// Build & Development": "",
    "build": "tsc --noEmit && vite build",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist/types",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint:check && npm run test:ci",
    "// Environment Setup": "",
    "install:browsers": "playwright install",
    "install:browsers:chromium": "playwright install chromium",
    "install:browsers:firefox": "playwright install firefox",
    "install:browsers:webkit": "playwright install webkit",
    "setup": "npm install && npm run install:browsers",
    "setup:ci": "npm ci && npm run install:browsers",
    "// Code Quality": "",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint:check": "eslint . --ext .ts --max-warnings 0",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "// Maintenance": "",
    "clean": "rimraf test-results coverage playwright-report dist node_modules/.cache",
    "clean:reports": "rimraf test-results playwright-report enterprise-reports",
    "clean:deps": "rimraf node_modules package-lock.json && npm install",
    "deps:check": "npm audit && npm outdated",
    "deps:update": "npm update && npm audit fix",
    "// Security & Encryption": "",
    "encrypt": "node scripts/env-crypto.js encrypt",
    "decrypt": "node scripts/env-crypto.js decrypt",
    "env:process": "node scripts/env-crypto.js process-env",
    "env:validate": "node scripts/env-crypto.js validate",
    "// Docker": "",
    "docker:build": "docker build -t testfusion-enterprise .",
    "docker:run": "docker run --rm -v $(pwd)/test-results:/app/test-results testfusion-enterprise",
    "docker:test": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "// Performance & Monitoring": "",
    "monitor": "node scripts/health-check.js",
    "// Documentation": "",
    "docs:generate": "typedoc --out docs tests/",
    "docs:serve": "http-server docs -p 8080",
    "// Release": "",
    "prerelease": "npm run validate",
    "release": "npm run build && npm publish",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "keywords": [
    "playwright",
    "testing",
    "automation",
    "e2e"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@playwright/test": "^1.53.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.0",
    "@types/node": "^24.0.1",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv-cli": "8.0.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-prettier": "5.5.0",
    "fs-extra": "^11.3.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "playwright-qase-reporter": "^2.1.3",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "typedoc": "^0.25.0",
    "typescript": "^5.3.3",
    "vite": "6.3.5",
    "vitest": "3.2.4"
  },
  "dependencies": {
    "dotenv": "^16.5.0"
  }
}
