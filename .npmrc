# Package Registry Configuration
registry=https://registry.npmjs.org/

# Strict SSL
strict-ssl=true

# Performance optimizations
prefer-offline=true
cache-max=86400000
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Security settings
audit-level=moderate
fund=false

# CI optimizations
progress=false
loglevel=error

# Engine strict mode
engine-strict=true

# Lock file settings
package-lock=true
save-exact=true

# Auto-install peer dependencies
auto-install-peers=true
