# EditorConfig for TestFusion-Enterprise
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{js,ts}]
quote_type = single

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{sh,bat}]
end_of_line = lf

[Dockerfile*]
indent_size = 2

[*.py]
indent_size = 4

[Makefile]
indent_style = tab

[*.go]
indent_style = tab
indent_size = 4
