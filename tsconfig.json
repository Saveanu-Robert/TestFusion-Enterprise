{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": ["tests/*"],
      "@utils/*": ["tests/utils/*"],
      "@fixtures/*": ["tests/fixtures/*"],
      "@models/*": ["tests/models/*"],
      "@config/*": ["tests/config/*"],
      "@services/*": ["tests/services/*"],
      "@pages/*": ["tests/web/pages/*"],
      "@constants/*": ["tests/constants/*"]
    }
  },
  "include": [
    "tests/**/*", 
    "playwright.config.ts", 
    "vite.config.ts",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "test-results", 
    "enterprise-reports",
    "coverage",
    "playwright-report"
  ]
}
